{% extends 'base.html.twig' %}

{% block title %}Employe index{% endblock %}

{% block body %}
    <h1 class="m-10 text-center">Employ√©s</h1>

    <table class="mx-auto col-10 table">
        <thead>
            <tr>
            <th>Photo</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Contact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
