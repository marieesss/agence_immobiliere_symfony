{% extends 'base.html.twig' %}

{% block title %}Agence index{% endblock %}

{% block body %}
    <h1>Agence index</h1>
    <div class="row justify-content-center">
    <div class="col-10 mx-auto">
 <div class="card-deck">
     {% for agence in agences %}

    <div class="card col-4" style="width: 18rem;">
     <img class="img img-fluid"src="{{ asset('uploads/agence/' ~ agence.filename) }}" alt="">
      <div class="card-body d-flex align-items-end">
                <div class="row ">
                <div class="text-center"> 
                    <p>{{ agence.Agence }} </p>
                </div>
                </div>
         </div>
                <button type="button" class="btn btn-outline-primary btn-lg btn-block">
                        <a href="{{ path('app_agence_show', {'id': agence.id}) }}">En savoir plus</a>
                </button>
                         
                     {% if is_granted('ROLE_ADMIN') %}
                    <button type="button" class="btn btn-outline-primary btn-lg btn-block">
                       <a href="{{ path('app_agence_edit', {'id': agence.id}) }}">Editer</a>
                </button>
                     {% endif %}
                </div>
    
      {% endfor %}
      </div>
            </div>
            </div>

    


{% endblock %}
