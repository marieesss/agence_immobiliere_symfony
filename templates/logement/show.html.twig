{% extends 'base.html.twig' %}

{% block title %}Logement{% endblock %}

{% block body %}
    <h1>Logement</h1>

    <table class="table">
        <tbody>
            <tr>
            {% for agence in logement.agences %}
                <td><img class="img img-fluid w-25"src="{{ asset('uploads/agence/' ~ agence.filename) }}" alt=""></td>
            {% endfor %}
                
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ logement.prix }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ logement.ville }}</td>
            </tr>
            <tr>
                <th>Superficie</th>
                <td>{{ logement.superficie }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ logement.description }}</td>
            </tr>
            <tr>
                <th>photo</th>
                <td><img class="img img-fluid w-25"src="{{ asset('uploads/logement/' ~ logement.filename) }}" alt=""></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_logement_index') }}">back to list</a>

    <a href="{{ path('app_logement_edit', {'id': logement.id}) }}">edit</a>

    {{ include('logement/_delete_form.html.twig') }}
{% endblock %}
